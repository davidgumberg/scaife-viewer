#!/bin/sh

set -ex

export USE_CLOUD_INDEXER=1

# seed data
# TODO: Re-use Docker layer caching from
# scaife-cts-api
export CTS_RESOLVER=api
mkdir -p /var/lib/nautilus/data
python manage.py load_text_repos
if [[ $# -eq 0 ]]
then
    echo "No morphology path was set."
else
    MORPHOLOGY_PATH=$1
    mkdir -p $MORPHOLOGY_PATH
    curl \
        --silent \
        --retry-delay 1 \
        --retry-max-time 30 \
        --compressed \
        https://storage.googleapis.com/scaife-indexer-us-central1/forms-normalised-20180208_001.txt > $MORPHOLOGY_PATH/forms-normalised.txt
    curl \
        --silent \
        --retry-delay 1 \
        --retry-max-time 30 \
        --compressed \
        https://storage.googleapis.com/scaife-indexer-us-central1/works-20180208_001.txt > $MORPHOLOGY_PATH/works.txt
    curl \
        --silent \
        --retry-delay 1 \
        --retry-max-time 30 \
        --compressed \
        https://storage.googleapis.com/scaife-indexer-us-central1/text-20180208_001.txt > $MORPHOLOGY_PATH/text.txt
fi
export CTS_RESOLVER=local
python manage.py indexer \
    --pusher=pubsub \
    --pubsub-project="${GCP_PROJECT}" \
    --pubsub-topic="search-indexer-${SCAIFE_INSTANCE}-documents" \
    $@
